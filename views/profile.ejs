<% include ./partials/header.ejs%>
<div class="h-[100vh] w-full bg-zinc-800 text-white pt-1 px-12">
  <div
    class="profile w-full flex justify-center items-center flex-col mt-[6vw]"
  >
    <form action="/dpupload" hidden method="post" enctype="multipart/form-data">
      <input type="file" name="dp" />
      <button type="submit">submit</button>
    </form>
    <div class="dp relative">
      <div class="img h-[20vh] bg-white w-[20vh] rounded-full overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user.dp %>"
          alt=""
        />
      </div>
      <span
        class="icon h-[3.5vh] w-[3.5vh] rounded-full flex justify-center items-center bg-gray-200 absolute right-[8%] bottom-[5%]"
        ><i class="ri-pencil-line text-black"></i
      ></span>
    </div>
    <h1 class="mt-3 text-2xl"><%= user.fullname %></h1>
    <h6 class="opacity-80"><%= user.username%></h6>
    <a href="/create" class="px-4 py-2 rounded-lg bg-red-500 text-sm mt-6"
      >Add New Post</a
    >
  </div>
  <% if(user.posts.length>0){%>
  <div class="pins mt-[5vw]">
    <div class="w-[12vw] h-[22vh] rounded-lg bg-white overflow-hidden">
      <img
        class="h-full w-full object-cover"
        src="/images/uploads/<%= user.posts[0].image %>"
        alt=""
      />
    </div>
    <a class="text-xl mt-2 block" href="/alluploads">Your Uploaded Pins</a>
    <p class="text-sm opacity-65"><%= user.posts.length%></p>
  </div>
  <%}%>
</div>

<script>
  const form = document.querySelector("input");

  const icon = document.querySelector(".icon");

  icon.addEventListener("click", () => {
    form.click();
  });
  form.addEventListener("change", () => {
    document.querySelector("form").submit();
  });
</script>
<% include ./partials/footer.ejs%>
